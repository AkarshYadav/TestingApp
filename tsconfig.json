{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Add this line
    "paths": {
      "@/*": ["./*"] // Add this line
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "actions/create-class.js", "actions/join-class.js", "app/(main)/_components/(sidebar)/wrapper.jsx", "app/(main)/_components/(sidebar)/user-item.jsx", "app/(main)/_components/(sidebar)/toggle.jsx", "app/(main)/_components/(sidebar)/index.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
